{
  "name": "vsc-go-${localWorkspaceFolderBasename}-${devcontainerId}",
  // "image": "aazw/devcontainers-devbox-go:7",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        "jnoortheen.nix-ide", // nix
        "jetpack-io.devbox", // devbox
        "golang.go"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  // "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/.claude-home-cache",
      "target": "/home/vscode/.claude",
      "type": "bind"
    }
  ],
  "containerUser": "root", // コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1",
    "CGO_ENABLED": "0",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "runArgs": [
    "--name",
    "vsc-go-${localWorkspaceFolderBasename}-${devcontainerId}",
    "--add-host",
    "host.docker.internal:host-gateway",
    "--cap-add=SYS_PTRACE",
    "--cap-add=NET_ADMIN", // iptablesのため
    "--cap-add=NET_RAW", // iptablesのため
    "--security-opt",
    "seccomp=unconfined"
  ],
  "postAttachCommand": "task init"
}
