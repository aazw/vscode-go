{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.devbox": true // 重いので追加
  },
  "files.associations": {
    "devbox.json": "jsonc"
  },
  "editor.wordWrap": "off",
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "editor.formatOnSave": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // treefmt側でフォーマッタを選択する
        "match": ".*",
        "cmd": "treefmt \"${file}\""
      }
    ]
  }
}
